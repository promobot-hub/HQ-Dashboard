# Example environment variables for HQ-Dashboard / Core
# Copy to .env and fill with real values (never commit .env!)

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# GitHub writes (server-side only)
GH_TOKEN=
GH_REPO=promobot-hub/HQ-Dashboard

# Ingest security (Phase 2)
USE_HMAC_INGEST=false
HMAC_SECRET=

# Data source selection
DATA_SOURCE=github # or supabase

# Supabase (Phase 3 prep)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=
SUPABASE_ANON_KEY=

# Browserless (server-side only)
REMOTE_BROWSER_API_KEY=
