# Example environment variables for HQ-Dashboard / Core
# Copy to .env and fill with real values (never commit .env!)

# Core Clawbot API base (server-side readable, also exposed to client)
# Point this to your Clawbot Core API (Railway/hosted). If unset, defaults to http://localhost:8000
NEXT_PUBLIC_CLAWBOT_API_BASE=

# Optional: public base of this dashboard (used by cronRunner for self-snapshots)
CRON_SELF_URL=

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# GitHub writes (server-side only)
# NOTE: GH_REPO must be in the form owner/repo (e.g. promobot-hub/HQ-Dashboard), not a .git URL
GH_TOKEN=
GH_REPO=promobot-hub/HQ-Dashboard

# Ingest security (Phase 2)
USE_HMAC_INGEST=false
HMAC_SECRET=

# Data source selection
DATA_SOURCE=github # or supabase

# Supabase (Phase 3 prep)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=
SUPABASE_ANON_KEY=

# Browserless (server-side only)
REMOTE_BROWSER_API_KEY=
